// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// n行省略号
wrap($n)
  display:-webkit-box
  -webkit-line-clamp: $n/*第几行裁剪*/
  -webkit-box-orient:vertical

// 内部水平和垂直方向都居中
center()
  display: flex
  align-items: center
  justify-content: center

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
